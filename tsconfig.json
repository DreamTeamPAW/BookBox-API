{
  "compilerOptions": {
    "target": "es2015",                                  
    "module": "ESNext",                                 
    "moduleResolution": "node",       
    "resolveJsonModule": true,                   
    "esModuleInterop": true,                          
    "strict": true,                                     
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
