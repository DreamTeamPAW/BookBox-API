{
  "compilerOptions": {                              
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist", 
    "resolveJsonModule": true,                   
    "esModuleInterop": true,                          
    "strict": true,                                     
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
